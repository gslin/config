set nofoldenable
set number
set ruler
set scrolloff=3
set secure
set shiftwidth=4
set showmatch
set smartcase
set t_Co=256
set visualbell
set wildmenu
syntax on
"
" color schema
let g:airline_powerline_fonts = 1
let g:solarized_termcolors = 256
colo solarized
set background=dark
highlight Search cterm=none ctermbg=blue
